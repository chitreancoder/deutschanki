---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Learn German vocabulary with flashcards' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | DeutschAnki</title>
  </head>
  <body class="relative z-10">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-bg-primary)]/80 backdrop-blur-xl border-b border-white/5">
      <div class="max-w-5xl mx-auto px-4 sm:px-6">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3 group">
            <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-[var(--color-der)] via-[var(--color-die)] to-[var(--color-das)] flex items-center justify-center shadow-lg">
              <span class="text-white font-bold text-sm">DE</span>
            </div>
            <span class="font-[var(--font-display)] text-xl text-[var(--color-text-primary)] group-hover:text-[var(--color-accent)] transition-colors">
              DeutschAnki
            </span>
          </a>

          <!-- Nav Links -->
          <div class="flex items-center gap-1 sm:gap-2">
            <a
              href="/"
              class="nav-link px-3 py-2 rounded-lg text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-white/5 transition-all"
              data-page="dashboard"
            >
              Dashboard
            </a>
            <a
              href="/quiz"
              class="nav-link px-3 py-2 rounded-lg text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-white/5 transition-all"
              data-page="quiz"
            >
              Quiz
            </a>
            <a
              href="/browse"
              class="nav-link px-3 py-2 rounded-lg text-sm font-medium text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)] hover:bg-white/5 transition-all"
              data-page="browse"
            >
              Browse
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 pb-8 px-4 sm:px-6 min-h-screen">
      <div class="max-w-5xl mx-auto">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/5 py-6 px-4">
      <div class="max-w-5xl mx-auto text-center">
        <p class="text-sm text-[var(--color-text-muted)]">
          Built with <span class="text-[var(--color-die)]">&hearts;</span> for German learners
        </p>
      </div>
    </footer>

    <script>
      // Highlight active nav link
      const currentPath = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href');
        if (href === currentPath || (href === '/' && currentPath === '/')) {
          link.classList.add('text-[var(--color-accent)]', 'bg-[var(--color-accent)]/10');
          link.classList.remove('text-[var(--color-text-secondary)]');
        }
      });
    </script>
  </body>
</html>
